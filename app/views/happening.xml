<Alloy>
	<Window class="happeningWin" id="happeningWin">
		<ScrollView id="scrollView">
			<View id="topView">
				<Label id="title">New Happening</Label>
				<View id="line"></View>
				<View id="leftCircle"></View>
				<View id="rightCircel"></View>
			</View>
			<View id="content">
				<View id="happeningName">
					<TextField id="happeningTextField" />
				</View>
				<View id="details">
					<TextArea id="detailsTextField" />
				</View>
				<View id="location">
					<TextField id="locationTextField" />
				</View>
				<View id="budget">
					<TextField id="budgetTextField" />
				</View>
				<View id="priContainer">
					<View id="publicContainer" onClick="publicClicked">
						<Label id="publicLabel">Public</Label>
						<ImageView id="publicRadio" />
					</View>
					<View id="privateContainer" onClick="privateClicked">
						<Label id="privateLabel">Private</Label>
						<ImageView id="privateRadio" />
					</View>
				</View>
				<View id="photoView" onClick="openGallery">
					<Label id="cameraIcon"></Label>
				</View>
				<Button id="saveBtn" onClick="createHappening">Save</Button>
			</View>
		</ScrollView>
	</Window>
</Alloy>