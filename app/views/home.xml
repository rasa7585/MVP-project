<Alloy>
	<Window onOpen="setInfo" id="homeWin">
		<View id="userContainer">
			<View id="userInfo" onClick="showProfile">
				<Label id="title">Happenings</Label>
				<Label id="todayDesc">Today you have 9 Happenings</Label>
			</View>
			
			<View id="leftCircle"></View>
			<View id="rightCircel"></View>
			<View id="photoContainer" onClick="showProfile">
				<View id="profilePhoto">
					<ImageView id="profileImg" />
				</View>
			</View>
		</View>
		<ScrollView id="scrollView">
			<View id="happeningContainer"></View>
		</ScrollView>
		<View id="addHappening" onClick="addHappening">
			<View id="addBtn">
				<View id="labelContainer">
					<Label id="addIcon"></Label>
					<Label id="btnLabel"></Label>
				</View>
			</View>
		</View>
	</Window>
</Alloy>